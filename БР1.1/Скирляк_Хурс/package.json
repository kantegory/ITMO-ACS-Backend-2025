    "eslint-plugin-prettier": "^5.4.0",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "nodemon": "^3.0.0",
    "prettier": "^3.5.3",
    "supertest": "^7.1.1",
    "ts-jest": "^29.1.0",
